@using DrugTrade.Web.ViewModels.Pharmacies
@model PharmacyInputModel

@{
    this.ViewData["Title"] = "Add Pharmacy";
}

<h1 class="display-3">Добавяне на нова аптека</h1>

<form asp-controller="Pharmacy" asp-action="Add" method="post">

    <div class="form-group">
        <label for="name">Име</label>
        <input type="text" class="form-control" id="name" name="Name">
    </div>
    <div class="form-group">
        <label for="address">Адрес</label>
        <input type="text" class="form-control" id="address" name="Address">
    </div>
    <div class="form-group">
        <label for="contactNumber">Номер за връзка</label>
        <input type="text" class="form-control" id="contactNumber" name="ContactNumber">
    </div>
    <div class="form-group">
        <label for="profileImage">Връзка към снимка:</label>
        <input type="text" class="form-control" id="profileImage" name="ProfileImage" />
    </div>
    <button type="submit" class="btn btn-primary">Добави</button>
</form>